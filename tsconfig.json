{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./build",
        "allowJs": true,
        "checkJs": false,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "strictNullChecks": true,
        "noUnusedLocals": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}