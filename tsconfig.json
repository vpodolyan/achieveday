{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./build",
    "allowJs": true,
    "checkJs": false,
    "module": "esnext",
    "target": "es6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
